{
    "name": "llpo/mathepa",
    "type": "library",
    "description": "Mathpa is a library to evaluate PHP math expressions",
    "keywords": [
        "mathepa",
        "mathematical expression",
        "math expression",
        "evaluator",
        "parser",
        "calculate"
    ],
    "homepage": "https://github.com/llpo/mathepa",
    "license": "MIT",
    "authors": [
        {
            "name": "Llu√≠s Pons"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.2",
        "squizlabs/php_codesniffer": "^3.2",
        "phpmd/phpmd" : "@stable",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Mathepa\\": "src/Mathepa/"
        },
        "files": [
            "src/Mathepa/rules.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mathepa\\Test\\": "test/Mathepa/"
        },
        "files": [
            "test/helper.php"
        ]
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpmd"
        ],
        "phpunit": "phpunit",
        "phpcs": "phpcs",
        "phpmd": "phpmd src/,test/ text phpmd.xml"
    }
}
