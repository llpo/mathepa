{
    "name": "llpo/mathepa",
    "type": "library",
    "description": "Mathpa is a library to evaluate simple PHP math expressions",
    "keywords": ["mathepa", "evaulate", "math expression", "calculate"],
    "license": "MIT",
    "authors": [
        {
            "name": "Llu√≠s Pons"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.2",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": {
        "psr-4": {
            "Mathepa\\": "src/Mathepa/"
        },
        "files": [
            "src/Mathepa/rules.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mathepa\\Test\\": "test/Mathepa/"
        },
        "files": [
            "test/helper.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpmd"
        ],
        "phpunit": "phpunit",
        "phpcs": "phpcs",
        "phpmd": "phpmd src/,test/ text phpmd.xml"
    }
}
